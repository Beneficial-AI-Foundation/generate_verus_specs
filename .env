# Verus Configuration Environment Variables
# Copy this to .env.local and customize as needed

# Path to the Verus executable
VERUS_PATH=<path_to_verus_executable>

# Default timeout for Verus compilation (in seconds) 
VERUS_TIMEOUT=30

# Default timeout for random file testing (in seconds)
VERUS_RANDOM_TIMEOUT=60

# Additional Verus command line arguments (optional)
VERUS_EXTRA_ARGS=

# Output directory for benchmark generation (optional)
DEFAULT_OUTPUT_DIR=

# Whether to skip moving failed files by default (true/false)
SKIP_MOVE_FAILED=false

# Whether to skip generating summary reports by default (true/false)  
SKIP_SUMMARY=false

# Whether to skip timestamps in generated folder names by default (true/false)
NO_TIMESTAMP=false
